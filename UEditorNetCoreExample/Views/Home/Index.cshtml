<body>

    <div class="editor-area">
        <div>
            <h2>写新文章</h2>
            标题：<input id="title" type="text" />
            <script id="editor" type="text/plain" style="height:500px;">
            </script>
        </div>
        <div id="btns">
            <div>
                <button onclick="Save()">保存</button>
                <button >取消</button>

            </div>

        </div>
</body>
